  <body>
    <div class="container-fluid">
      <div class="row">
        <div class="col-2">
          <nav class="nav sticky-top">
            <%- include('../partials/_loggedin_nav') %>
          </nav>
        </div>

        <div class="col-6 ">
          <div class="sticky-top">
          <div class="row justify-content-center">
            <h1 class="h1"><%= resource.title%></h1>
          <div class="card mb-3">
            <iframe id="video_thumbnail"
                class="embed-responsive-item"
                class="card-img-top"
                src= "<%= resource['url']%>"
              >
            </iframe>
          </div>
          </div>

          <div class="card-body">
            <!-- <h5 class="card-title">Card title</h5> -->
            <!-- <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p> -->

          <div class="card-footer d-flex justify-content-around">
            <div>
              <img onclick="addFavourite()" id="like-icon" src="/documents/like.svg">
              <small class="text-center">10</small>
            </div>
            <p class="card-text"><small class="text-muted">Posted By: <%= resource.user_name%></small></p>
            <div>
              <small class="text-center"><%= resource['average_rating']%>/5</small>
              <img id="star-icon" src="/documents/star_24.png">
              <form method="POST" action="/api/resources/<%=resource['id']%>/rating" >
                <small>
                  <select name="rating" id="ratings">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                  </select>
                </small>
                <button type="submit" class="btn btn-secondary" id="submit-button">rating</button>
              </form>


            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-4 scroll-view" id="comment_container" >
      <!-- <main class="container"> -->
        <section class="new-comment">
          <h2>comments?</h2>
          <form method="post" action="/api/resources/<%=resource.id%>">
            <label for="comment-text">What are you humming about?</label>
            <div class="error-empty"><p>Your comment is empty!</p></div>
            <div class="error-140"><p>Your comment needs to be less than 140 characters!</p></div>
            <textarea name="text" id="comment-text"><%=resource.comment%></textarea>
            <div class="footer">
              <button class="btn btn-secondary" id="submit-button">comment</button>
              <output id="textAreaOutput" name="counter" class="counter" for="comment-text">140</output>
            </div>
          </form>
        </section>
        <div id="comments-container">
        </div>
      <!-- </main> -->
      </div>
  </body>
